<body>

  <h2>⚾ MLB Multi Bet Value Finder</h2>

  <label>Team Name:</label>
  <input type="text" id="teamName" placeholder="e.g. NY Yankees" />

  <label>SofaScore Winning % (e.g. 54):</label>
  <input type="number" id="winningProb" min="0" max="100" step="0.01" />

  <label>Bookmaker Decimal Odds (e.g. 2.10):</label>
  <input type="number" id="odds" min="1.01" step="0.01" />

  <button onclick="addBet()">Add Bet</button>
  <button class="clear-btn" onclick="clearBets()">Clear All Bets</button>

  <table id="betsTable" style="display:none;">
    <thead>
      <tr>
        <th>Team</th>
        <th>SofaScore Winning %</th>
        <th>Decimal Odds</th>
        <th>Expected Value (EV)</th>
        <th>Value Bet?</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <script>
    const bets = [];

    function calculateEV(wp, odds) {
      return (wp * odds) - 1;
    }

    function isValueBet(ev) {
      return ev > 0;
    }

    function addBet() {
      const team = document.getElementById('teamName').value.trim();
      const wpInput = document.getElementById('winningProb').value;
      const oddsInput = document.getElementById('odds').value;

      if (!team || wpInput === '' || oddsInput === '') {
        alert('Please fill all fields!');
        return;
      }

      const wp = parseFloat(wpInput) / 100;
      const odds = parseFloat(oddsInput);

      if (wp < 0 || wp > 1) {
        alert('Winning % must be between 0 and 100.');
        return;
      }
      if (odds < 1.01) {
        alert('Odds must be at least 1.01.');
        return;
      }

      const ev = calculateEV(wp, odds);

      bets.push({ team, wp, odds, ev });

      renderTable();
      clearInputs();
    }

    function renderTable() {
      const table = document.getElementById('betsTable');
      const tbody = table.querySelector('tbody');

      tbody.innerHTML = '';

      if (bets.length === 0) {
        table.style.display = 'none';
        return;
      }

      bets.forEach((bet, idx) => {
        const tr = document.createElement('tr');

        tr.innerHTML = `
          <td>${bet.team}</td>
          <td>${(bet.wp * 100).toFixed(2)}%</td>
          <td>${bet.odds.toFixed(2)}</td>
          <td>${(bet.ev * 100).toFixed(2)}%</td>
          <td class="${isValueBet(bet.ev) ? 'value-yes' : 'value-no'}">${isValueBet(bet.ev) ? 'YES ✅' : 'NO ❌'}</td>
          <td><button class="remove-btn" onclick="removeBet(${idx})">X</button></td>
        `;

        tbody.appendChild(tr);
      });

      table.style.display = 'table';
    }

    function removeBet(index) {
      bets.splice(index, 1);
      renderTable();
    }

    function clearBets() {
      if (confirm('Clear all bets?')) {
        bets.length = 0;
        renderTable();
      }
    }

    function clearInputs() {
      document.getElementById('teamName').value = '';
      document.getElementById('winningProb').value = '';
      document.getElementById('odds').value = '';
    }
  </script>

</body>
</html>
